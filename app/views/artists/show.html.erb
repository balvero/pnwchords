<h2><%= @artist.name %></h2>
<% if logged_in?(:site_admin) %>
<div class="meta">
  <span><%= link_to 'Edit Artist', edit_artist_path(@artist), class: 'badge badge-success' %> </span>
  <span><%= link_to 'Add Song', new_song_path, class: 'badge badge-primary' %></span>
  <span><%= link_to 'Back', artists_path, class: 'badge badge-secondary' %></span>
</div>
<% end %>
<hr />
<ul class="list">
  <% @songs.each do |song| %>
      <li><%= link_to song.title, song %></li>
  <% end %>
</ul>
<%= paginate @songs %>
