<%= simple_form_for song do |form| %>


    <div class="form-group">
      <%= form.hidden_field 'user_id', :value => @user_id, class: 'form-control' %>
    </div>


    <%= form.input :title, label: 'Song Title', error: 'Song Title is required' %>
  <div class="row">
    <div class="col-md-6">
      <%= form.input :artist_id, :collection => Artist.order(:name), label: 'Artist', error: 'Artist is required', include_blank: false %>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label 'Song Key' %> <br/>
        <%= form.collection_select :key, [['C', 'C'] ,['C#', 'C#'], ['D', 'D'],['D#', 'D#'], ['E', 'E'], ['F', 'F'], ['F#', 'F#'], ['G', 'G'], ['G#', 'G#'], ['A', 'A'], ['A#', 'A#'], ['B', 'B']], :first, :last  %>
      </div>
    </div>
  </div>



    <%= form.input :body, label: 'Body', error: 'Song Body is required.' %>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
