<div id="search-div" class="row">
  <div class="col-lg-6">
    <%= form_tag(songs_path, :method => 'get', id: 'search-form') do %>
        <div class="input-group">
          <%= text_field_tag :search, params[:search], placeholder: 'Search Songs', class: 'form-control' %>
          <span class="input-group-btn">
            <%= submit_tag 'Search', :name => nil, class: 'btn btn-success' %>
          </span>

        </div>

    <% end %>
  </div>
</div>
<div class="row">
  <% if logged_in?(:site_admin) %>
      <div class="col">
        <%= link_to 'Add Song', new_song_path, class: 'btn btn-sm btn-primary' %>
      </div>
  <% end %>

</div>
<div id="song-list" class="row">

  <div class="col">
    <% if @songs.any? %>
    <ul class="list">
    <% @songs.each do |song| %>

          <li><%= link_to song.title, song, class: 'bold' %> by <span class="artist"><%= link_to song.artist.name, song.artist %></span>
          <% if logged_in?(:site_admin) %>
            <span><%= link_to 'Edit', edit_song_path(song), class: 'badge badge-success' %></span>
            <span><%= link_to 'Delete', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge badge-danger' %></span>
          <% end %>
          </li>
    <% end %>
    </ul>
    <% else %>
        <div class="not-found">
          No songs found...
        </div>
    <% end %>
    <%= paginate @songs %>
  </div>
</div>

