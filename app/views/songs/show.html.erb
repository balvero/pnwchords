<h1><%= @song.title %> <%= link_to 'Edit', edit_song_path(@song), class: 'btn btn-sm btn-primary' %></h1>
<div class="meta">
  <ul>
    <li><strong>Artist: </strong> <%= link_to @song.artist.name, @song.artist, class: 'badge badge-secondary' %></li>
    <li><strong>Key: </strong> <span class="badge badge-secondary"><%= @song.key %></span></li>
  </ul>
</div>
<div class="song-body">
  <pre data-key="<%= @song.key %>">
<%= @song.body %>

</pre>

</div>



